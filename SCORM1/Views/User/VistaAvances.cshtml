    @if (Model.enrollment != null)
    {
     

        <br />
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                <tbody>
                    <div class="row" style="margin:5%">
                        @foreach (var modules in Model.enrollment)
                        {

                        <div class="col-md-4">
                            @foreach (var a in Model.Modulo)
                            {

                                if (a.Modulo_Id == modules.Modu_Id)
                                {
                                    var puntaje = a.Score.ToString();

                                    if (a.Score >= 0 && a.Score < 49)
                                    {
                                        <div class="progress" style="height: 30px;">
                                            <div class="progress-bar bg-danger" role="progressbar" style="width:@puntaje.Replace(",", ".")%" aria-valuenow="@puntaje" aria-valuemin="0" aria-valuemax="100"><b>@a.Score%</b></div>
                                        </div>
                                        cont = 1;
                                    }
                                    if (a.Score >= 50 && a.Score < 79)
                                    {
                                        <div class="progress" style="height: 30px;">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: @puntaje.Replace(",", ".")%" aria-valuenow="@puntaje" aria-valuemin="0" aria-valuemax="100"><b>@a.Score%</b></div>
                                        </div>
                                        cont = 1;
                                    }
                                    if (a.Score >= 80)
                                    {
                                        <div class="progress" style="height: 30px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: @puntaje.Replace(",", ".")%" aria-valuenow="@puntaje" aria-valuemin="0" aria-valuemax="100"><b>@a.Score%</b></div>
                                        </div>
                                        cont = 1;
                                    }

                                }

                            }
                            @if (cont == 0)
                            {
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"><b>0%</b></div>
                                </div>
                            }
                            <h4 style="text-transform:uppercase;color: #fc3650;"><b>@modules.Module.Modu_Name</b></h4>
                            <p><b>Comienzo:</b>@modules.Enro_InitDateModule</p>
                            <p><b>Termina:</b>@modules.Enro_FinishDateModule</p>
                            @{ cont = 0;}
                        </div>
                        }
                    </div>
                </tbody>
            </table>
        </div>
